<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
    <div class="container">
        <h1>The Laundry System</h1>
        <div class="options">
            <div class="option">
                <a id="dryerLink" href="/dryer-status">
                    <img src="/images/dryer.png" alt="Dryer">
                    <button>Check Dryer</button>
                </a>
            </div>
            <div class="option">
                <a id="laundryLink" href="/laundry-status">
                    <img src="/images/laundry.png" alt="Laundry Machine">
                    <button>Check Laundry Machine</button>
                </a>
            </div>
        </div>
    </div>
    <script>
        const urlParams = new URLSearchParams(window.location.search);
        const userEmail = urlParams.get('email');

        if (userEmail) {
            const dryerLink = document.getElementById('dryerLink');
            const laundryLink = document.getElementById('laundryLink');

            if (dryerLink && laundryLink) {
                dryerLink.href += `?email=${encodeURIComponent(userEmail)}`;
                laundryLink.href += `?email=${encodeURIComponent(userEmail)}`;
            } else {
                console.error('Links not found');
            }
        } else {
            console.warn('Email parameter not found in URL');
        }
    </script>
</body>
</html>
